{
  "version": "0.23.0-beta.3",
  "private": true,
  "engines": {
    "node": "^10.13.0",
    "yarn": "^1.10.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0",
    "typescript": "^3.4.1"
  },
  "scripts": {
    "build": "polkadot-dev-build-ts && (cd packages/client-cli && copyfiles scripts/* build)",
    "build:wasm": "./scripts/polkadot-wasm-js-compat.sh",
    "check": "yarn lint",
    "lint": "tslint --project . && tsc --noEmit --pretty",
    "clean": "polkadot-dev-clean-build",
    "postinstall": "polkadot-dev-yarn-only",
    "test": "jest --coverage",
    "start": "node packages/client-cli/scripts/polkadot.js",
    "start:www": "cd packages/client-www && webpack --config webpack.config.js"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/runtime": "^7.4.3",
    "@polkadot/dev-react": "^0.30.0-beta.0",
    "@polkadot/ts": "^0.1.56",
    "copyfiles": "^2.1.0",
    "empty": "^0.10.1",
    "gh-pages": "^2.0.1"
  }
}
